<%- include('../includes/header.ejs', {titulo: 'Cadastro de Categorias'}) %>

    <main>
        <h2>Cadastro de nova Turma</h2>

        <form action="/categorias/novo" method="POST" class="form">
            <div class="form-group">
                <label>Nome da Categoria</label>
                <input type="text" name="nome_turma" required>
            </div>
            <button type="submit" class="btn btn-principal">Adicionar</button>
            <a href="/categorias/listar" class="btn btn-secundario">Cancelar</a>
        </form>
    </main>

